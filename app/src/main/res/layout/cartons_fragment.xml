<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.my_orders.cartons.CartonsFragment">

    <ImageView
        android:id="@+id/cartons_img"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_cartonnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/cartons_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/enter_number_of_cartons"
        app:layout_constraintTop_toBottomOf="@+id/cartons_img"
        android:textSize="16sp"
        android:textColor="@color/davygrey"
        android:textAlignment="center"/>
    <include
        android:id="@+id/edit"
        layout="@layout/add_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cartons_msg"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/edit"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/submit"
        android:textColor="@color/taupe"
        android:backgroundTint="@color/sunglow"
        app:cornerRadius="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>